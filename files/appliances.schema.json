{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "appliances.schema.json",
  "title": "Appliances",
  "description": "Kitchen appliances and cookware — categorized equipment with optional notes",
  "type": "object",
  "required": ["categories", "updated_at"],
  "additionalProperties": false,
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "appliances"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Category name, e.g. 'Ηλεκτρικές Συσκευές', 'Μαγειρικά Σκεύη'"
          },
          "appliances": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "notes": {
                  "type": "string",
                  "description": "Freeform notes: brand, model, capacity, heat settings, etc."
                }
              }
            }
          }
        }
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
